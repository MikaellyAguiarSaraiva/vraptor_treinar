<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	
	<typeAliases>
		<typeAlias alias="Produto" type="br.com.caelum.vraptor.model.Produto"/>
	</typeAliases>
	
	<environments default="development">
		<environments id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="org.postgresql.Driver" />
				<property name="url" value="jdbc:postgresql://localhost:5432/produto" />
				<property name="name" value="postgres" />
				<property name="password" value="root" />
			</dataSource>
		</environments> 
	</environments>
	
	<mappers>
		<mappers resource="br/com/caelum/vraptor/data/Produto.xml" />
	</mappers>
	
</configuration>